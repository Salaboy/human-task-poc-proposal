<switchyard xmlns="urn:switchyard-config:switchyard:1.0"
            xmlns:camel="urn:switchyard-component-camel:config:1.0">
    <composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912" name="camel-jms-binding" targetNamespace="urn:switchyard-quickstart:camel-jms-binding:0.1.0">
    
        <service name="TaskInstanceEndpoint" promote="TaskInstanceEndpoint">
            <camel:binding.jms>
                <camel:operationSelector operationName="activate"/>
                <camel:queue>TaskInstanceEndpointQueue</camel:queue>
                <camel:connectionFactory>#ConnectionFactory</camel:connectionFactory>
            </camel:binding.jms>
        </service>
        <service name="TaskInstanceEndpoint" promote="TaskInstanceEndpoint">
            <camel:binding.jms>
                <camel:operationSelector operationName="start"/>
                <camel:queue>TaskInstanceEndpointQueue</camel:queue>
                <camel:connectionFactory>#ConnectionFactory</camel:connectionFactory>
            </camel:binding.jms>
        </service>
    </composite>
</switchyard>
